            <h3>@Model.ProName</h3>
        </div>
        <div class="col-md-12 padding ">
            <span class="caption-lg-red">Giá khởi điểm: @string.Format("{0:N0}", Model.Price) VND</span>
        </div>
        <div class="col-md-12 padding datecolor">
            Thời gian đấu giá đến: @Model.DateTime
        </div>

